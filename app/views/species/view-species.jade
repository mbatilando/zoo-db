extends ../layout

block header
	include ../header/header

block sidebar
	include ../sidebar/sidebar

block content
	div(class="content")
		table(class="pure-table custom-table")
			thead
				tr
					th id
					th scientific_name
					th common_name
					th description
			tbody
				each specie, index in Species
					tr(class=(index % 2 == 0) ? 'pure-table-even' : 'pure-table-odd')
						td
							a(href="/species/#{specie.id}") #{specie.id}
						td
							a(href="/species/#{specie.id}") #{specie.scientific_name}
						td
							a(href="/species/#{specie.id}") #{specie.common_name}
						td
							a(href="/species/#{specie.id}") #{specie.description}
