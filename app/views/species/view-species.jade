extends ../layout

block content
	table(class="pure-table")
		thead
			tr
				th id
				th scientific_name
				th common_name
				th description
		tbody
			each specie, index in Species
				tr(class=(index % 2 == 0) ? 'pure-table-even' : 'pure-table-odd')
					td
						a(href="/view/specie/#{specie.id}") #{specie.id}
					td
						a(href="/view/specie/#{specie.id}") #{specie.scientific_name}
					td
						a(href="/view/specie/#{specie.id}") #{specie.common_name}
					td
						a(href="/view/specie/#{specie.id}") #{specie.description}
