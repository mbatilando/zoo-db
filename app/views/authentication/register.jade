extends authentication-layout

block extraCss
	link(rel='stylesheet', href='/css/authentication.css')

block content
	div(class="login-partial")
		div(class="brand-container")
			img(class="brand-icon" src="/img/brand.png")
			div(class="brand-caption")
				span Welcome to
				span(class="brand-name") ZooDB
		div(class="login-box")
			form(name="login-form" class="pure-form" method="POST" action="/authentication/register")
				input(type="text"
					  name="username"
					  placeholder="Username"
					  class="form-control login-field username")

				label(class="login-field-icon fui-user" for="login-name")

				input(name="password"
					  type="password"
					  class="form-control login-field password"
					  placeholder="Password")

				label(class="login-field-icon fui-lock" for="login-name")

				label(for="user_type") User Type
				select(name="user_type")
					option(value="user") User
					option(value="admin") Admin
				input(type="submit" class="pure-button" value="Register")