doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(rel='stylesheet', href='/css/form.css')
      link(rel='stylesheet', href='/components/pure/pure-min.css')
      link(rel='stylesheet', href='/components/jquery-ui/themes/base/datepicker.css')
      link(rel='stylesheet', href='/components/jquery-ui/themes/base/theme.css')
      link(rel='stylesheet', href='/css/header.css')
      link(rel='stylesheet', href='/css/common.css')
      link(rel='stylesheet', href='/css/animal-search-sub.css')
      block extraCss
    block js
      script(src='http://localhost:35729/livereload.js')
      script(src='/components/jquery/dist/jquery.min.js')
      script(src='/components/moment/moment.js')
      script(src='/components/jquery-ui/jquery-ui.js')
      script(src='/js/search.js')
  body
    block header
      include header
    div(class="main")
      block content
        div(class="content-container")
          h1 Search Results
          ul(class="results")
            each animal, index in results
              a(href="/animal/profile/#{animal.id}")
                li(class="tile")
                  div(class="picture-container")
                    img(src="#{animal.picture_url}")
                  div(class="tile-information")
                    span(class="name") #{animal.given_name}
                    span(class="weight") #{animal.weight} lbs.
                    span(class="gender") #{animal.gender}

