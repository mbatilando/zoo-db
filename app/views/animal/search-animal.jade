doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(rel='stylesheet', href='/css/form.css')
      link(rel='stylesheet', href='/components/pure/pure-min.css')
      link(rel='stylesheet', href='/components/jquery-ui/themes/base/datepicker.css')
      link(rel='stylesheet', href='/components/jquery-ui/themes/base/theme.css')
      link(rel='stylesheet', href='/css/header.css')
      link(rel='stylesheet', href='/css/common.css')
      link(rel='stylesheet', href='/css/animal-search.css')
      block extraCss
    block js
      script(src='http://localhost:35729/livereload.js')
      script(src='/components/jquery/dist/jquery.min.js')
      script(src='/components/moment/moment.js')
      script(src='/components/jquery-ui/jquery-ui.js')
  body
    block header
      include ../header/header
    div(class="main")
      block content
        div(class="search-container")
          img(class="main-logo" src="/img/big-brand.png")
          form(class="pure-form")
            select(class="attribute")
              option name
            input(type="text" placeholder="Search Animal")
            button(type="submit" class="pure-button pure-button-primary") Search
