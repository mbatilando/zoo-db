extends ../layout

block content
	table(class="pure-table")
		thead
			tr
				th id
				th name
				th phone
				th street
				th city
				th state
				th zip
				th country
				th opening_time
				th closing_time
		tbody
			each zoo, index in Zoos
				tr(class=(index % 2 == 0) ? 'pure-table-even' : 'pure-table-odd')
					td #{zoo.id}
					td #{zoo.name}
					td #{zoo.phone}
					td #{zoo.street}
					td #{zoo.city}
					td #{zoo.state}
					td #{zoo.zip}
					td #{zoo.country}
					td #{zoo.opening_time}
					td #{zoo.closing_time}
