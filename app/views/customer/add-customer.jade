extends ../layout

block header
	include ../header/header

block sidebar
	include ../sidebar/sidebar

block content
	div(class="content")
		form(class="custom-form customer-form pure-form pure-form-stacked" action="/customer/" method="POST")
			h1 Customer Form
			fieldset
				label(for="first_name") First Name
				input(name="first_name", type="text", placeholder="John")
				label(for="last_name") Last Name
				input(name="last_name", type="text", placeholder="Doe")
				label(for="phone") Phone
				input(name="phone" type="text" placeholder="(510) 432-8970")
			button(type="submit" class="pure-button pure-button-primary") Create Member
